<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OptimalHeartRateCalculator" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ScreenBackground">
        <item name="android:background">#1B1A1A</item>
    </style>

    <style name="SettingDataBackground">
        <item name="android:background">@drawable/night_mode_backgrounds</item>
    </style>

    <style name="BackgroundOfSelectedOption">
        <item name="android:background">@drawable/backgrounds</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleForLanguages">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResultTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ColoredTextStyle">
        <item name="android:textColor">#FF4C4C</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalculateButtonBackground" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/night_mode_calculate_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SwitchModeBackground" parent="Widget.AppCompat.Button">
        <item name="android:background">#FF4C4C</item>
    </style>

    <style name="BackArrow">
        <item name="android:src">@drawable/backarrow32px</item>
    </style>

    <style name="HelpWindowBackground">
        <item name="android:background">@drawable/night_mode_help_window_background</item>
    </style>

    <style name="HelpWindowTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="HelpWindowFormulaTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="HelpWindowCloseButtonBackground">
        <item name="android:background">@drawable/help_window_close_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AnimationsSwitch">
        <item name="android:track">@drawable/night_mode_animations_switch</item>
    </style>

</resources>